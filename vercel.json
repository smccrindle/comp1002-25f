{
  "functions": {
    "**/*.php": {
      "runtime": "vercel-php@0.7.4"
    }
  },
  "routes": [
    {
      "src": "^/(.*)\\.php$",
      "dest": "/$1.php"
    },
    {
      "src": "^/(.*)/$",
      "dest": "/$1/index.php"
    },
    {
      "src": "^/([^\\.]+)$",
      "dest": "/$1/index.php"
    }
  ]
}